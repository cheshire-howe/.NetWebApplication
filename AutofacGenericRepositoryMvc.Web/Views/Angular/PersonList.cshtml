<p>
    <a href="#/Create">Create New</a>
</p>
<ul>
    <li ng-repeat="person in persons">
        <h3><a href="#/Detail/{{person.Id}}">{{person.Name}}</a></h3>
        <p>
            <a href="#/Edit/{{person.Id}}">Edit</a> |
            <a id="delete" ng-really-message="Are You Sure?" ng-really-click="deletePerson(person.Id)">Delete</a>
        </p>
        <p>{{person.Phone}}</p>
        <p>{{person.Address}}, {{person.State}}, {{person.Country.Name}}</p>
        <span>Speaks:</span>
        <ul>
            <li ng-repeat="language in person.Languages">
                {{language.Name}}
            </li>
        </ul>
    </li>
</ul>
